@model List<Urun>

<div class="row">
    @if (Model.Count > 0)
    {
        foreach (var x in Model)
        {
            <div class="col-md-3">
                <div class="card mr-1 mb-1">
                    <img src="~/img/@x.Resim" class="card-img-top" alt="@x.Resim">
                    <div class="card-body">
                        <h5 class="card-title">@x.Ad</h5>
                        <p class="card-text">@x.Fiyat</p>
                        <a asp-action="UrunDetay" asp-controller="Home" asp-route-id="@x.Id" class="btn btn-primary float-right">Detay</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            Herhangi Bir Ürün Bulunmaktadır.
        </div>
    }

</div>
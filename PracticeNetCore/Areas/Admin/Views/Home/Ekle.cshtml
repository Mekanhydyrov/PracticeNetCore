@model UrunEkleModel

<form asp-action="Ekle" asp-controller="Home" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label>Ürün Adı: </label>
        <input type="text" asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ürünün Fiyatı: </label>
        <input asp-for="Fiyat" class="form-control" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ürünün Resmi: </label>
        <input type="file" asp-for="Resim" class="form-control-file" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section JavaScript{
<script src="~/jqueryValid/jquery.validate.min.js.validate.min"></script>
<script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}